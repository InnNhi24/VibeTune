{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/chat.ts",
      "use": "@vercel/node@2.x",
      "config": { "includeFiles": ["backend/dist/**", "backend/node_modules/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/chat"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ]
}

