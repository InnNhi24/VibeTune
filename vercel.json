{
  "version": 2,
  "functions": { "api/**/*.{js,ts}": { "runtime": "@vercel/node@20.x" } },
  "buildCommand": "npm ci && npm run -w frontend build && npm run -w backend build",
  "outputDirectory": "frontend/build",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ]
}
