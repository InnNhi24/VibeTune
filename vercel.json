{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "options": { "distDir": "dist" }
    },
    {
      "src": "backend/dist/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/dist/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/$1"
    }
  ]
}
