{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    { "src": "api/**/*.[jt]s", "use": "@vercel/node" },
    { "src": "frontend/build/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.js" },
    { "source": "/(.*)", "destination": "/frontend/build/index.html" }
  ]
}

