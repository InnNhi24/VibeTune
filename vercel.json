{
  "functions": { "api/*.ts": { "runtime": "@vercel/nodejs@20.x" } },
  "buildCommand": "npm ci && npm run -w backend build && npm run -w frontend build",
  "outputDirectory": "frontend/build",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ]
}
