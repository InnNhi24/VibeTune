# VibeTune Environment Variables Template
# Copy this file to .env.local and fill in your actual API keys
# üîí NEVER commit .env.local to version control

# ==============================================
# üåê Application Configuration
# ==============================================
# Application environment (development/production)
NODE_ENV=development
APP_ENV=development

# Application URL and port
VITE_APP_URL=http://localhost:3000
PORT=5000

# ==============================================
# ü§ñ AI Service Configuration
# ==============================================
# OpenAI API Key for AI prosody analysis and conversation
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Deepgram API Key for speech-to-text transcription
# Get your key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here
VITE_DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ==============================================
# üóÑÔ∏è Supabase Configuration
# ==============================================
# Supabase Project URL (Public)
VITE_SUPABASE_URL=your_supabase_project_url_here

# Supabase Anon Key (Public - safe for client)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (Private - server only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==============================================
# üîê Security Configuration
# ==============================================
# JWT Secret for token signing
JWT_SECRET=your_jwt_secret_here

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# üìä Analytics & Monitoring
# ==============================================
# Enable analytics tracking
VITE_ANALYTICS_ENABLED=true

# Sentry DSN for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# ==============================================
# üîß Development Configuration
# ==============================================
# Enable debug logging (set to false in production)
DEBUG=true
VITE_DEBUG=true

# Enable hot reload
VITE_HMR=true

